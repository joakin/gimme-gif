{
  "name": "gimme-gif",
  "version": "3.0.0",
  "description": "webapp for searching giphy for a gif",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --hot --inline --content-base src/",
    "watch": "webpack --watch",
    "build": "rm -rf dist && NODE_ENV=production webpack -p && cp src/favicon.ico src/manifest.json dist/",
    "test:watch": "nodemon -e js,elm,html --exec 'npm test' --ignore test.js",
    "test": "elm-make test/TestRunner.elm --output test.js && node test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joakin/gimme-gif.git"
  },
  "keywords": [
    "gif",
    "giphy",
    "web",
    "app"
  ],
  "author": "Joaquin Oltra <joaquin@chimeces.com> (http://chimeces.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joakin/gimme-gif/issues"
  },
  "homepage": "https://github.com/joakin/gimme-gif#readme",
  "dependencies": {
    "offline-plugin": "^3.2.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.1",
    "css-loader": "^0.25.0",
    "elm": "^0.17.1",
    "elm-webpack-loader": "^3.0.6",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.22.0",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "nodemon": "^1.10.2",
    "postcss-loader": "^0.13.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.1",
    "webpack-merge": "^0.14.1"
  }
}
