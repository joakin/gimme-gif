{
  "name": "gimme-gif",
  "version": "3.0.0",
  "description": "webapp for searching giphy for a gif",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --hot --inline --content-base src/",
    "watch": "webpack --watch",
    "build": "rm -rf dist && NODE_ENV=production webpack -p && cp src/favicon.ico src/manifest.json dist/",
    "test:watch": "nodemon -e js,elm,html --exec 'npm test' --ignore tests.js",
    "test": "pushd tests && elm-make TestRunner.elm --output tests.js && node tests.js && popd",
    "test:install": "pushd tests && elm package install -y && popd"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joakin/gimme-gif.git"
  },
  "keywords": [
    "gif",
    "giphy",
    "web",
    "app"
  ],
  "author": "Joaquin Oltra <joaquin@chimeces.com> (http://chimeces.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joakin/gimme-gif/issues"
  },
  "homepage": "https://github.com/joakin/gimme-gif#readme",
  "dependencies": {
    "offline-plugin": "^3.2.1"
  },
  "devDependencies": {
    "autoprefixer": "6.3.6",
    "css-loader": "0.23.1",
    "elm": "0.17.0",
    "elm-webpack-loader": "3.0.0",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.8.5",
    "html-webpack-plugin": "2.16.1",
    "less": "^2.5.3",
    "less-loader": "^2.2.1",
    "node-sass": "3.7.0",
    "nodemon": "^1.9.2",
    "postcss-loader": "0.9.1",
    "sass-loader": "3.2.0",
    "style-loader": "0.13.1",
    "webpack": "1.13.0",
    "webpack-dev-server": "1.14.1",
    "webpack-merge": "0.12.0"
  }
}
